<div class="col">
  <a href="{% if team.redirect %}{{ team.redirect }}{% else %}{{ team.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      {% if team.picture %}
        {% assign profile_image_path = team.picture | prepend: 'assets/img/team/' %}
        {%
          include figure.liquid
          loading="eager"
          path=profile_image_path
          sizes = "250px"
          alt="team thumbnail"
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h3 class="card-title">{{ team.title }}</h3>
        <p class="card-text">{{ team.position }} <br /> 
        {{ team.organization }}  <br /> 
        {{ team.department }}  <br /> <br /> 
        Office: {{ team.office }}  <br /> 
        Email: {{ team.email }}  <br /> 
        Phone: {{ team.phone }}  <br /> 
        </p>
      </div>
    </div>
  </a>
</div>
